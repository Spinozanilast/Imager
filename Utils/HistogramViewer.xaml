<Window
    x:Class="Imager.Utils.HistogramViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Imager.Utils"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:oxy="http://oxyplot.org/wpf"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="HistogramViewer"
    Width="800"
    Height="450"
    ui:WindowHelper.UseModernWindowStyle="True"
    mc:Ignorable="d" Icon="/Utils/histogramIcon.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <oxy:PlotView x:Name="RedHistogramPlot" Grid.Row="0" />
        <oxy:PlotView x:Name="GreenHistogramPlot" Grid.Row="1" />
        <oxy:PlotView x:Name="BlueHistogramPlot" Grid.Row="2" />
    </Grid>
</Window>
